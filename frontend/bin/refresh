#!/usr/bin/env bash
set -e

echo "ðŸ”„ Refreshing frontend development environment..."

# Kill any process on port 3001
echo "  â†’ Stopping dev server on port 3001..."
lsof -ti:3001 | xargs kill -9 2>/dev/null || echo "    (no process found)"

# Clean caches
echo "  â†’ Cleaning caches..."
rm -rf .next tsconfig.tsbuildinfo node_modules/.cache 2>/dev/null || true

echo "  â†’ Starting dev server..."
npm run dev
