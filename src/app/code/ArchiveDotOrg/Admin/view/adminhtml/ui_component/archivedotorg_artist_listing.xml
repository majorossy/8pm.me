<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">archivedotorg_artist_listing.archivedotorg_artist_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="sync_all">
                <url path="*/*/syncAll"/>
                <class>primary</class>
                <label translate="true">Sync All Artists</label>
            </button>
        </buttons>
        <spinner>archivedotorg_artist_columns</spinner>
        <deps>
            <dep>archivedotorg_artist_listing.archivedotorg_artist_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="archivedotorg_artist_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">status_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>ArchiveDotOrg_Admin::artists</aclResource>
        <dataProvider class="ArchiveDotOrg\Admin\Ui\Component\Listing\ArtistDataProvider" name="archivedotorg_artist_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>status_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filterSearch name="fulltext"/>
        <filters name="listing_filters">
            <settings>
                <templates>
                    <filters>
                        <select>
                            <param name="template" xsi:type="string">ui/grid/filters/elements/ui-select</param>
                            <param name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</param>
                        </select>
                    </filters>
                </templates>
            </settings>
        </filters>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="archivedotorg_artist_columns">
        <settings>
            <editorConfig>
                <param name="enabled" xsi:type="boolean">false</param>
            </editorConfig>
        </settings>
        <selectionsColumn name="ids">
            <settings>
                <indexField>status_id</indexField>
            </settings>
        </selectionsColumn>
        <column name="artist_name">
            <settings>
                <filter>text</filter>
                <label translate="true">Artist Name</label>
                <sortOrder>10</sortOrder>
            </settings>
        </column>
        <column name="collection_id">
            <settings>
                <filter>text</filter>
                <label translate="true">Collection ID</label>
                <sortOrder>20</sortOrder>
            </settings>
        </column>
        <column name="shows_downloaded">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Shows Downloaded</label>
                <sortOrder>30</sortOrder>
            </settings>
        </column>
        <column name="shows_processed">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Shows Processed</label>
                <sortOrder>40</sortOrder>
            </settings>
        </column>
        <column name="tracks_matched">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Tracks Matched</label>
                <sortOrder>50</sortOrder>
            </settings>
        </column>
        <column name="tracks_unmatched">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Tracks Unmatched</label>
                <sortOrder>60</sortOrder>
            </settings>
        </column>
        <column name="match_rate">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Match Rate (%)</label>
                <sortOrder>70</sortOrder>
            </settings>
        </column>
        <column name="last_download_at" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Last Download</label>
                <sortOrder>80</sortOrder>
            </settings>
        </column>
        <column name="last_populate_at" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Last Populate</label>
                <sortOrder>90</sortOrder>
            </settings>
        </column>
        <actionsColumn name="actions" class="ArchiveDotOrg\Admin\Ui\Component\Listing\Column\ArtistActions">
            <settings>
                <indexField>status_id</indexField>
                <resizeEnabled>false</resizeEnabled>
                <resizeDefaultWidth>107</resizeDefaultWidth>
                <sortOrder>100</sortOrder>
            </settings>
        </actionsColumn>
    </columns>
</listing>
