<?xml version="1.0"?>
<!--
/**
 * ArchiveDotOrg Core Module - Category View Layout
 */
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="ArchiveDotOrg\Core\Block\Player"
                   name="archivedotorg.category.player"
                   template="ArchiveDotOrg_Core::player.phtml"
                   before="-">
                <arguments>
                    <argument name="context_type" xsi:type="string">category</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
