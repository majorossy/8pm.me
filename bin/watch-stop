#!/usr/bin/env bash
set -e

PID_FILE="/tmp/8pm-watch.pid"

if [ ! -f "$PID_FILE" ]; then
    echo "‚ö†Ô∏è  File watcher not running"
    exit 0
fi

PID=$(cat "$PID_FILE")

if kill -0 "$PID" 2>/dev/null; then
    echo "üõë Stopping file watcher (PID: $PID)..."
    kill "$PID"
    rm -f "$PID_FILE"
    echo "‚úÖ File watcher stopped"
else
    echo "‚ö†Ô∏è  Process $PID not found (cleaning up stale PID file)"
    rm -f "$PID_FILE"
fi
